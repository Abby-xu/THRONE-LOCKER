<LoginForm>:

    BoxLayout:
        canvas.before:
            Color:
                rgba: .6, .81, .99, 1
            Rectangle:
                pos: self.pos
                size: self.size
        orientation: 'vertical'
        padding: [30, 30, 30, 30]
        spacing: 3
        Image: 
            source: 'a.png'
            size_hint_x: 0.5
            size_hint_y: 2
            allow_stretch: True
            keep_ratio: True
        Label:
            text: 'THRONE LOCKERS'
            color: 0, 0, 0, 1
            font_size:80


        Label:
            text: 'Name'
            color: 0, 0, 0, 1
            font_size: 50
            text_size: self.size
            halign: 'left'
            size_hint_y: 0.6
        TextInput:
            id: usernameField
            multiline: False
            write_tab: False
            size_hint_y: 0.8
            font_size: 100
        Label:
            text: 'Email'
            color: 0, 0, 0, 1
            font_size: 50
            text_size: self.size
            halign: 'left'
            size_hint_y: 0.6
        TextInput:
            id: passwordField
            password: False
            multiline: False
            write_tab: False
            size_hint_y: 0.8
            font_size: 100
        BoxLayout:
            Label:
                text: "Safe travel! \nThanks and Gig'em :)"
                color: 0.8, 0.2, 0.2, 1
                font_size: 40
                text_size: self.size
                halign: 'left'
                valign: 'middle'
                size_hint_y: 1.2

        Button:
            
            background_color: 0, 0.2, 0.9, 0.5
            id: submit
            text: 'Submit'
            font_size: 50
            on_press: root.submit(usernameField.text, passwordField.text)
            size_hint_y: 1.2
        BoxLayout:
            id: bottom_box
            orientation: "horizontal"
            padding: 2
            spacing: 2
            size: root.width,100

            Button:
                text: "Shop"
                font_size: 40
                background_color: 0, 0.2, 0.9, 0.5
                on_press: root.shop_submit()
            Button:
                text: "Flight Info"
                font_size: 40
                background_color: 0, 0.2, 0.9, 0.5
                on_press: root.website_function()
            Button:
                text: "Aircraft Model"
                font_size: 40
                background_color: 0, 0.2, 0.9, 0.5
                on_press: root.aircraft_function()
            Button:
                text: "Quit"
                font_size: 40
                background_color: 0, 0.2, 0.9, 0.5
                on_press: app.stop()


<LoginErrorPopup>
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: root.msg
        Button:
            text: 'Close'
            pos_hint: {'center_x': .5}
            size_hint: (.5, .3)
            on_press: root.dismiss()

<SuccessScreen>
    BoxLayout:
        canvas.before:
            Color:
                rgba: .6, .81, .99, .5
            Rectangle:
                pos: self.pos
                size: self.size
        orientation: 'vertical'
        padding: [30, 30, 30, 30]
        Label:
            text: 'Successfully logged in!'
            font_size: 100
        Button:
            text: "I want to reserve my package"
            font_size: 50
            background_color: 0, 0.2, 0.9, 0.5
            on_press: app.root.current = 'Reserved'
        Button:
            text: "I want to take my package"
            font_size: 50
            background_color: 0, 0.2, 0.9, 0.5
            on_press: app.root.current = 'Take'

